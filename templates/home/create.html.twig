{% extends 'base.html.twig' %}
{% block body %}
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
            <div class="card-body">
                <h1 class="card-title text-center mb-3">ToDoList</h1>
                <p class="card-text text-center mb-4">
                    Create a task
                </p>
                <form action="{{ path('app_task_create') }}" method="POST">
                    <div class="mb-3">
                        <label for="task_name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="task_name" name="task_name"
                               placeholder="Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="task_cost" class="form-label">Cost</label>
                        <input type="number" step="0.01" min="0" class="form-control" id="task_cost" name="task_cost"
                               placeholder="Ex: 714.27" required>
                    </div>
                    <div class="mb-3">
                        <label for="task_limit_date" class="form-label">Limit date</label>
                        <input type="date" class="form-control" id="task_limit_date" name="task_limit_date" required>
                    </div>
                    <div class="btn-group gap-2">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a class="btn btn-secondary" href="{{ path('app_home') }}" >Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="notification" class="notification" style="background-color: red; color: white" ></div>

    <!-- never put your hands in this code -->
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <script>
                showNotification({{ message|json_encode|raw }});
            </script>
        {% endfor %}
    {% endfor %}

{% endblock %}







